</head>
<body header="nlheader" header-height="10%" footer="nlfooter" footer-height="20pt" padding="0in 0in 0in 0in" size="Letter">
    
    <!-- Bill To and Ship To Section -->
    <table style="width: 100%; margin-top: 10px; border-collapse:collapse;">
        <tr>
            <td style="width:50%; vertical-align:top; padding-right:10px;">
                <div style="font-size:10pt; font-weight:bold; margin-bottom:5px; border-bottom:2px solid #c4121a; padding-bottom:3px;">
                    Facturé à:
                </div>
                <div style="font-size:9pt;">
                    <strong>${record.entity}</strong><br/>
                    ${record.billaddress}<br/>
                    <#if record.entity.phone?has_content>
                    Tél: ${record.entity.phone}<br/>
                    </#if>
                    <#if record.entity.email?has_content>
                    Courriel: ${record.entity.email}
                    </#if>
                </div>
            </td>
            <td style="width:50%; vertical-align:top; padding-left:10px;">
                <div style="font-size:10pt; font-weight:bold; margin-bottom:5px; border-bottom:2px solid #c4121a; padding-bottom:3px;">
                    Adresse des travaux (chantier):
                </div>
                <div style="font-size:9pt;">
                    <#if record.shipaddress?has_content>
                    ${record.shipaddress}<br/>
                    <#else>
                    ${record.billaddress}<br/>
                    </#if>
                    <#if record.entity.phone?has_content>
                    Tél: ${record.entity.phone}<br/>
                    </#if>
                    <#if record.entity.email?has_content>
                    Courriel: ${record.entity.email}
                    </#if>
                </div>
            </td>
        </tr>
    </table>




    <!-- Sales Rep and Date Information -->
    <table style="width: 100%; margin-top: 10px; border-collapse:collapse; font-size:9pt;">
        <tr style="background-color:#f5f5f5;">
            <th style="text-align:left; padding:5px; width:20%;">Représentant</th>
            <th style="text-align:left; padding:5px; width:15%;">Cellulaire</th>
            <th style="text-align:left; padding:5px; width:25%;">Courriel</th>
            <th style="text-align:left; padding:5px; width:20%;">Date début soumission</th>
            <th style="text-align:left; padding:5px; width:20%;">Date fin soumission</th>
        </tr>
        <tr>
            <td style="padding:5px;">${record.salesrep}</td>
            <td style="padding:5px;">
                <#if record.salesrep.mobilephone?has_content>
                ${record.salesrep.mobilephone}
                <#else>
                ${record.salesrep.phone}
                </#if>
            </td>
            <td style="padding:5px;">${record.salesrep.email}</td>
            <td style="padding:5px;">${record.expectedclosedate}</td>
            <td style="padding:5px;">${record.duedate}</td>
        </tr>
    </table>
    
    <#if record.item?has_content>
    <table class="itemtable" style="width: 100%; margin-top: 10px;">
        <!-- start items -->
        <#list record.item as item>
            <#if item_index==0>
                <thead>
                <tr>
                    <th align="center" style="width:5%;">Qté</th>
                    <th align="left" style="width:15%;">Article</th>
                    <th align="left" style="width:40%;">Description</th>
                    <th align="right" style="width:12%;">Prix</th>
                    <th align="right" style="width:12%;">Montant</th>
                </tr>
                </thead>
            </#if>
            <tr>
                <td align="center">${item.quantity}</td>
                <td><span class="itemname">${item.item}</span></td>
                <td>${item.description}</td>
                <td align="right">${item.rate}</td>
                <td align="right">${item.amount}</td>
            </tr>
        </#list>
        <!-- end items -->
    </table>
    <hr />
    </#if>
    <table class="total" style="width: 100%; margin-top: 10px;">
        <tr>
            <td colspan="4"></td>
            <td align="right"><b>${record.subtotal@label}</b></td>
            <td align="right">${record.subtotal}</td>
        </tr>
        <tr>
            <td colspan="4"></td>
            <td align="right"><b>${record.altshippingcost@label}</b></td>
            <td align="right">${record.altshippingcost}</td>
        </tr>
        <tr>
            <td colspan="4"></td>
            <td align="right"><b>${record.taxtotal@label} (${record.taxrate}%)</b></td>
            <td align="right">${record.taxtotal}</td>
        </tr>
        <tr>
            <td colspan="4"></td>
            <td align="right"><b>${record.taxtotal@label} (${record.taxrate}%)</b></td>
            <td align="right">${record.taxtotal}</td>
        </tr>
        <tr class="totalrow">
            <td background-color="#ffffff" colspan="4"></td>
            <td align="right"><b>${record.total@label}</b></td>
            <td align="right">${record.total}</td>
        </tr>
    </table>
</body>
</pdf>